// TODO enable javascript and jsdoc 
// and compile jsdoc to typescript
{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "esnext",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "jsx": "react",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}